<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="72dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="start">

    <!-- AI Avatar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_ai_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_ai_assistant"
            app:tint="?attr/colorOnPrimaryContainer"
            android:contentDescription="@string/ai_avatar" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Message Bubble -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/chat_ai_bubble"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/tv_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/chat_ai_bubble_text"
                android:textIsSelectable="true"
                tools:text="Risposta dell'AI con testo di esempio" />

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="@color/chat_timestamp"
                tools:text="12:34" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
