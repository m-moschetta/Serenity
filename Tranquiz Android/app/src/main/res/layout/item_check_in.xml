<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/profile_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tv_check_in_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_check_in_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check-in Serale"
                    android:textColor="@color/profile_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_check_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Gen 2025"
                    android:textColor="@color/profile_text_hint"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_check_in_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Felice, Calmo, Sereno"
                android:textColor="@color/profile_text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:30"
            android:textColor="@color/profile_text_hint"
            android:textSize="11sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
